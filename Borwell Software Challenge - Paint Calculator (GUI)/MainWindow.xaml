        <TextBox x:Name="Height_TXTBOX" HorizontalAlignment="Left" Height="17" Margin="53,53,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Button Name="Submit_BTN" Content="Submit" HorizontalAlignment="Center" Margin="60,0,57,10" VerticalAlignment="Bottom" Width="75" Click="Submit_BTN_Click"/>

    </Grid>
</Window>
